
@{
    Layout = null;
}
@model Quản_Lý_Của_Hàng_Bán_Cafe.Data.ThemTaiKhoan
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
  <meta name="description" content=""/>
  <meta name="author" content=""/>
  <title>Dashtreme Admin - Free Dashboard for Bootstrap 4 by Codervent</title>
  <!-- loader-->
@*  <link href="../layoutadmin/assets/css/pace.min.css" rel="stylesheet"/>
  <script src="../layoutadmin/assets/js/pace.min.js"></script>*@
  <!--favicon-->
  <link rel="icon" href="../layoutadmin/assets/images/favicon.ico" type="image/x-icon">
  <!-- Bootstrap core CSS-->
  <link href="../layoutadmin/assets/css/bootstrap.min.css" rel="stylesheet"/>
  <!-- animate CSS-->
  <link href="../layoutadmin/assets/css/animate.css" rel="stylesheet" type="text/css"/>
  <!-- Icons CSS-->
  <link href="../layoutadmin/assets/css/icons.css" rel="stylesheet" type="text/css"/>
  <!-- Custom Style-->
  <link href="../layoutadmin/assets/css/app-style.css" rel="stylesheet"/>
  
</head>

<body class="bg-theme bg-theme1">

<!-- start loader -->
   <div id="pageloader-overlay" class="visible incoming"><div class="loader-wrapper-outer"><div class="loader-wrapper-inner" ><div class="loader"></div></div></div></div>
   <!-- end loader -->

<!-- Start wrapper-->
 <div id="wrapper">

	<div class="card card-authentication1 mx-auto my-4">
		<div class="card-body">
		 <div class="card-content p-2">
		 	<div class="text-center">
		 		<img src="../layoutadmin/assets/images/logo-icon.png" alt="logo icon">
		 	</div>
		  <div class="card-title text-uppercase text-center py-3">Sign Up</div>
			<form asp-action="DangKy">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label for="exampleInputName" class="sr-only">Tên Của Bạn </label>
							<div class="position-relative has-icon-right">
								
								<input type="text" asp-for="TenKh" class="form-control input-shadow" placeholder="Enter Your Name">
								<span asp-validation-for="TenKh" class="text-danger"></span>
								<div class="form-control-position">
									<i class="icon-user"></i>
								</div>
							</div>
						</div>
						<div class="form-group">
							<label for="exampleInputName" class="sr-only">Phone</label>
							<div class="position-relative has-icon-right">
								<input type="text" asp-for="Sdt" class="form-control input-shadow" placeholder="Enter Your PhoneNumber">
								<span asp-validation-for="Sdt" class="text-danger"></span>
								<div class="form-control-position">
									<i class="icon-user"></i>
								</div>
							</div>
						</div>
			  <div class="form-group">
							<label for="exampleInputName" class="sr-only">Account Name</label>
			   <div class="position-relative has-icon-right">
								<input type="text" asp-for="UserName" class="form-control input-shadow" placeholder="Enter Your account name">
								<span asp-validation-for="UserName" class="text-danger"></span>
								<div class="form-control-position">
					  <i class="icon-user"></i>
				  </div>
			   </div>
			  </div>
			  <div class="form-group">
			   <label for="exampleInputPassword" class="sr-only">Password</label>
			   <div class="position-relative has-icon-right">
								<input type="password" asp-for="Password" class="form-control input-shadow" placeholder="Enter Your Password">
								<span asp-validation-for="Password" class="text-danger"></span>
								<div class="form-control-position">
					  <i class="icon-lock"></i>
				  </div>
			   </div>
			  </div>
						<div class="form-group">
							<label for="exampleInputPassword" class="sr-only">Check Password</label>
							<div class="position-relative has-icon-right">
								<input type="password" asp-for="CheckPassword" class="form-control input-shadow" placeholder="Enter Your Check Password">
								<span asp-validation-for="CheckPassword" class="text-danger"></span>
								<div class="form-control-position">
									<i class="icon-lock"></i>
								</div>
							</div>
						</div>
			  
			  
						@*<button type="button" value="Create" class="btn btn-light btn-block waves-effect waves-light">Sign Up</button>*@
						<div class="form-group">
							<input type="submit" value="Create" class="btn btn-light btn-block waves-effect waves-light" />
						</div>
					</form>
			
					<div class="card-footer text-center py-3">
						<p class="text-warning mb-0">Already have an account? <a asp-action="Login"> Sign In here</a></p>
						
					</div>
		   </div>
		  </div>
		 
	     </div>
    
     <!--Start Back To Top Button-->
    <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
    <!--End Back To Top Button-->
	
	<!--start color switcher-->
   <div class="right-sidebar">
    <div class="switcher-icon">
      <i class="zmdi zmdi-settings zmdi-hc-spin"></i>
    </div>
    <div class="right-sidebar-content">

      <p class="mb-0">Gaussion Texture</p>
      <hr>
      
      <ul class="switcher">
        <li id="theme1"></li>
        <li id="theme2"></li>
        <li id="theme3"></li>
        <li id="theme4"></li>
        <li id="theme5"></li>
        <li id="theme6"></li>
      </ul>

      <p class="mb-0">Gradient Background</p>
      <hr>
      
      <ul class="switcher">
        <li id="theme7"></li>
        <li id="theme8"></li>
        <li id="theme9"></li>
        <li id="theme10"></li>
        <li id="theme11"></li>
        <li id="theme12"></li>
		<li id="theme13"></li>
        <li id="theme14"></li>
        <li id="theme15"></li>
      </ul>
      
     </div>
   </div>
  <!--end color switcher-->
	
	</div><!--wrapper-->
	
  <!-- Bootstrap core JavaScript-->
  <script src="../layoutadmin/assets/js/jquery.min.js"></script>
  <script src="../layoutadmin/assets/js/popper.min.js"></script>
  <script src="../layoutadmin/assets/js/bootstrap.min.js"></script>
	
  <!-- sidebar-menu js -->
  <script src="../layoutadmin/assets/js/sidebar-menu.js"></script>
  
  <!-- Custom scripts -->
  <script src="../layoutadmin/assets/js/app-script.js"></script>
  
</body>
</html>

