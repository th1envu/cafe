@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Quản_Lý_Của_Hàng_Bán_Cafe.Models.LoaiSp>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layoutadmin.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                Danh Sách Loại Sản Phẩm
                <a asp-action="AddLoai" style="float:right" type="submit" class="btn btn-light btn-round px-5"><i class="icon-lock"></i>Create</a>
                <br />
                @TempData["mes"]
                @TempData["thongbao"]
            </h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Mã Loại</th>
                            <th scope="col">Tên Loại</th>
                            @*  <th scope="col">Mô tả</th>*@
                            <th scope="col">#</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.MaLoai</td>
                                <td>@item.TenLoai</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { maloai = item.MaLoai}) |
                                    @Html.ActionLink("Details", "ChiTiet", new { maloai = item.MaLoai }) |
                                    @Html.ActionLink("Delete", "Delete", new { maloai = item.MaLoai })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager(Model,page => Url.Action("Index", new {page=page}),new X.PagedList.Web.Common.PagedListRenderOptions(){
	LiElementClasses = new List<String> {"page-item"},
	PageClasses = new List<String> {"page-link"}
})


