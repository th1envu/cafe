@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Quản_Lý_Của_Hàng_Bán_Cafe.Models.DboDanhMucSp>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layoutadmin.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                Danh Sách Sản Phẩm
                <a asp-action="GioHang" style="float:right" type="submit" class="btn btn-light btn-round px-5"><i style='font-size:24px' class='fas'>&#xf217;</i></a>
                <br />
                @TempData["mes"]
                @TempData["thongbao"]
            </h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Ảnh minh họa</th>
                            <th scope="col">Tên Sản Phẩm</th>
                            <th scope="col">Giá Bán</th>
                            <th scope="col">#</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td><img src="@Url.Content("../../main/Imgaes/"+item.AnhDaiDien)" style="width:200px ; height: 200px "></td>
                                <td>@item.TenSp</td>
                                <td>@item.GiaBanNhoNhat</td>

                                <td>
                                    <a asp-route-id="@item.MaSp" asp-action="ThemSanPham"><i style='font-size:24px' class='fas'>&#xf218;</i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager(Model,page => Url.Action("Index", new {page=page}),new X.PagedList.Web.Common.PagedListRenderOptions(){
	LiElementClasses = new List<String> {"page-item"},
	PageClasses = new List<String> {"page-link"}
})




