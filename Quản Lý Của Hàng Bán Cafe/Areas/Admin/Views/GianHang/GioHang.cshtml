@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Quản_Lý_Của_Hàng_Bán_Cafe.Models.cart.cartItem>
@{
	ViewData["Title"] = "GioHang";
	Layout = "~/Areas/Admin/Views/Shared/_layoutadmin.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                Danh Sách Sản Phẩm
                <a asp-action="ThanhToan" style="float:right" type="submit" class="btn btn-light btn-round px-5"><i class="icon-lock"></i>Tạo Hóa Đơn</a>
                <br />
                @TempData["mes"]
                @TempData["thongbao"]
            </h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Ảnh minh họa</th>
                            <th scope="col">Tên Sản Phẩm</th>
                            <th scope="col">Giá Bán</th>
                            <th scope="col">#</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td><img src="@Url.Content("../../main/Imgaes/"+item.AnhDaiDien)" style="width:100px ; height: 100px "></td>
                                <td>@item.TenSp</td>
                                <td>@item.SoLuong</td>
                              
                                <td>@item.GiaBan</td>
                                <td>@item.MaSize</td>
                                <td>@item.MaLuongDa</td>
                                <td>@item.MaTopPing</td>
                                <td>
                                    <a asp-route-id="@item.MaSp" asp-action="Remove"><i style="font-size:24px" class="fa">&#xf00d;</i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

