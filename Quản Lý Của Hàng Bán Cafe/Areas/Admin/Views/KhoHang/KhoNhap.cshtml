
@{
    ViewData["Title"] = "KhoNhap";
    Layout = "~/Areas/Admin/Views/Shared/_layoutadmin.cshtml";
}
@model IEnumerable<Quản_Lý_Của_Hàng_Bán_Cafe.Areas.Admin.Models.NhapHang>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                Danh Sách Giỏ Hàng
                <a asp-action="DatHang" style="float:right" type="submit" class="btn btn-light btn-round px-5"><i class="icon-lock"></i>Đặt Hàng</a>
                <br />
                @TempData["thongbao"]
            </h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Mã Hàng Hóa</th>
                            <th scope="col">Tên Hàng Hóa</th>
                            <th scope="col">Đơn Giá Nhập</th>
                            <th scope="col">Số Lượng Nhập</th>
                            <th scope="col">Thành Tiền</th>
                            @*  <th scope="col">Mô tả</th>*@
                            <th scope="col">#</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.MaHh</td>
                                <td>@item.TenHh</td>
                                <td>@item.DonGiaNhap</td>
                                <td>@item.SoLuongNhap</td>
                                <td>@item.TongTien</td>

                                <td>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.MaHh })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




