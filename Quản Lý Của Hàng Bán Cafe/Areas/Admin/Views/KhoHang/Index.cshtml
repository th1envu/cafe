@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Quản_Lý_Của_Hàng_Bán_Cafe.Models.HangHoa>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layoutadmin.cshtml";
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                Danh Sách Hàng Hóa Trong Kho
                <a asp-action="KhoNhap" style="float:right" type="submit" class="btn btn-light btn-round px-5"><i class="icon-lock"></i>Create</a>
                <br />
                @TempData["ThongBao"]
            </h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Mã Hàng Hóa</th>
                            <th scope="col">Tên Hàng Hóa</th>
                            <th scope="col">Số Lượng Còn trong kho</th>
                            <th scope="col">#</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.MaHh</td>
                                <td>@item.TenHh</td>
                                <td>@item.SoLuongCon</td>
                                <td>
                                    @Html.ActionLink("Nhập Hàng", "NhapHang", new { id = item.MaHh }) |
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Html.PagedListPager(Model,page => Url.Action("Index", new {page=page}),new X.PagedList.Web.Common.PagedListRenderOptions(){
	LiElementClasses = new List<String> {"page-item"},
	PageClasses = new List<String> {"page-link"}
})

